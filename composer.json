{
    "name": "qubus/filesystem",
    "type": "library",
    "description": "Filesystem component wrapper for League/Flysystem.",
    "keywords": [
        "file",
        "filesystem",
        "flysystem",
        "directory"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "josh@joshuaparker.blog"
        }
    ],
    "require": {
        "php": "^8.1",
        "league/flysystem": "^3.1",
        "league/flysystem-aws-s3-v3": "^3.1",
        "league/flysystem-ftp": "^3.1",
        "league/flysystem-memory": "^3.1",
        "league/flysystem-sftp": "^3.1",
        "qubus/config": "^2.0",
        "qubus/exception": "^2.0"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\FileSystem\\": ""
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
