{
    "name": "qubus/filesystem",
    "type": "library",
    "description": "Filesystem component wrapper for League/Flysystem.",
    "keywords": [
        "file",
        "filesystem",
        "flysystem",
        "directory"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Parker",
            "email": "joshua@joshuaparker.dev"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-curl": "*",
        "ext-ftp": "*",
        "league/flysystem": "^3",
        "league/flysystem-aws-s3-v3": "^3",
        "league/flysystem-ftp": "^3",
        "league/flysystem-memory": "^3",
        "league/flysystem-sftp-v3": "^3",
        "qubus/config": "^3",
        "qubus/exception": "^3"
    },
    "require-dev": {
        "qubus/qubus-coding-standard": "^1.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Qubus\\FileSystem\\": ""
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
